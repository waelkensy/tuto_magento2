<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="point_of_sales" resource="default" engine="innodb" comment="Offer">
        <column xsi:type="int" name="id" unsigned="true" identity="true"/>
        <column xsi:type="varchar" name="name" nullable="true" length="255" comment="name"/>
        <column xsi:type="varchar" name="description" nullable="true" length="255" comment="description"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
